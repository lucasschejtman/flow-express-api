{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "lib": [
      "es6"
    ],
    "rootDir": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "allowJs": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src/"
  },
  "include": [
    "src/**/*"
  ]
}